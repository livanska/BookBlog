<div class="  row   ">
    <div class=" col col-md-10 books ">
    <h1 class="text-center ml-0 mr-3">Books with tag <%=  @tag.name %></h1>
        <div class=" books   p-1 ml-0 ">
            <div class="books row ml-5   ">
                <% if @tag.books.empty?%>
                <h2 class="text-center">No books</h2>
                <% else %>
             <%= render @tags%>
             <%end%>
        </div>
    </div>
</div>

<div class = ' col col-md mr-0 mb-0 mt-4 taggings'>
	<h3 class = 'mb-4 '>Recent</h3>
	<% tag_list (Tag.counts) do |tag| %>
	<%= link_to tag.name, tag_path(tag.name), class: "tag" %>
	<% end %>	
	</div>
</div>
<%= will_paginate @tags %>