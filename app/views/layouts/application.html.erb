<!DOCTYPE html>
<html>
  <head>
    <title>BookBlog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class ="head_container">
    <img src="<%= asset_path( 'logo.png' ) %>" class="head_logo" alt="...">
    <div class= "align-items-center head_text ">anna read?</div>
    <img src="<%= asset_path( 'header.jpg' ) %>" class="d-block w-100" alt="...">
      <div class="content">
            <nav class="navbar   ">
              <ul class="nav nav-tabs">
                <li class="nav-item">
                  <a class="nav-link active" href="<%=books_path %>">All Books</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="<%=new_book_path %>">New Book</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#">Link</a>
                </li>
              </ul>
            </nav>
      </div>
    </div>
    <div class= 'container main'>
      <div class = 'row'>
        <div class = col-md-12>
          <%= flash.each do |name,message| %>
            <div class =' alert alert-<%= bootstrap_class_for(name) %>'>
              <button class="close" data-dismiss="alert">///</button>
              <%= message %>
            </div>
        </div>
      </div>
    </div>
    <%= yield %>
  </body>
</html>
